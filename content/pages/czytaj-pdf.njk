{%- set intro = collections.questionDataObject["wstep"] -%}

<html dir="ltr">
<head>
  <title></title>
  <style>
    body {
      font-family: Lato, Arial, Helvetica, sans-serif;
      color: #000;
    }

    h1 {
      font-size: 36px;
      margin-top: 42px;
      margin-bottom: 42px;
    }

    li a,
    p a {
      color: #005581;
    }

    h1 a,
    h2 a {
      text-decoration: none;
      color: #000;
    }

    .breakBefore {
      page-break-before: always;
    }

    .breakAfter {
      page-break-after: always;
    }

    .avoidBreakAfter {
      page-break-after: avoid;
    }

    h3 {
      font-size: 29px;
      margin-top: 42px;
      margin-bottom: 42px;
    }

    pre, code, kbd {
      line-height: initial;
      font-family:"Menlo", "Consolas", "Roboto Mono", "Ubuntu Monospace",
        "Noto Mono", "Oxygen Mono", "Liberation Mono", monospace,
        "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
    }

    p,
    li {
      font-size: 19px;
      line-height: 1.5;
    }

    img {
      max-width: 100%;
    }

    img.cover {
      max-width: 75%;
      display:block;
      margin: 0 auto;
    }


  </style>
</head>
<body>
{% set licence = collections.epubDataObject["licencja-prawa-autorskie"]  %}
<main class="container">
  <article class="full_content">
    <img class="cover" src="https://raw.githubusercontent.com/lwojcik/Mastodon-Poradnik/eleventy/assets/images/epub_cover.jpg" alt="" />
    <header>
      <hgroup style="text-align:center">
        <h1>Niezbyt zwięzłe wprowadzenie do Mastodona</h1>
      </hgroup>
    </header>
    <h2 class="breakBefore">Licencja i prawa autorskie</h2>
    {{ licence.templateContent|safe }}
    <h2 class="breakBefore">Wstęp</h2>
    {{ intro.templateContent|safe }}
    <h1 id="spis_tresci"><a href="#spis_tresci">Spis treści:</a></h1>
    <ul>
    {%- for questionSlug in orderedQuestionSlugs -%}
      {%- if questionSlug != 'wstep' -%}
      {%- set question = collections.questionDataObject[questionSlug] -%}
        <li>
          <a href="#{{ question.data.slug }}">{{ question.data.title }}</a>
        </li>
      {%- endif -%}
    {%- endfor -%}
    </ul>

    {%- for questionSlug in orderedQuestionSlugs -%}
      {%- if questionSlug != 'wstep' -%}
      {%- set question = collections.questionDataObject[questionSlug] -%}
        <h1 id="{{ question.data.slug }}"><a href="#{{ question.data.slug }}">{{ question.data.title }}</a></h1>
        {{ question.templateContent|localizeLinks|safe }}
      {%- endif -%}
    {%- endfor -%}

  </article>
</main>
</body>
</html>